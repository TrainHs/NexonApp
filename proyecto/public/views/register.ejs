                <div class="collapse navbar-collapse" id="navbarResponsive">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item"><a class="nav-link" href="#about">About</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <!-- Masthead-->
        <header class="masthead">
            <div class="container px-4 px-lg-5 d-flex h-100 align-items-center justify-content-center">
                <div class="d-flex justify-content-center">
                    <div class="text-center">
                        <h1 id="tres">NexonApp</h1>
                        <h2 class="text-white-50 mx-auto mt-2 mb-5">La red social para conectar.
                            Registrate Ahora!
                        </h2>

                        <form action="/users/register" method="post">
                            <div class="inputs">
                            
                            <input type="text" id="name" name="name" placeholder="Nombres y apellidos" required><br><br>
                    
                          
                            <input type="text" id="username" name="username" placeholder="Nombre de usuario" required><br><br>
                    
                            
                            <input type="date" id="bornDate" name="bornDate" placeholder="Fecha de nacimiento" required><br><br>
                    
                            
                            <input type="email" id="email" name="email" placeholder="Email" required><br><br>
                    
                            
                            <input type="password" id="password" name="password" placeholder="Contraseña" required><br><br>

                            <input type="password" id="password" name="confirmPassword" placeholder="Confirma tu contraseña" required><br><br>

                            </div>  
                          <div class="genero">
                            <label>
                                <input type="radio" name="gender" value="Masculino" required />
                                Masculino
                            </label>
                    
                            <label>
                                <input type="radio" name="gender" value="Femenino" required />
                                Femenino
                            </label><br/><br>
                        </div>  
                    
                            <button id="cuatro" type="submit">Registrarse</button>
                        </form><br><br>

                        <a href="/">Volver</a>

                    </div>
                </div>
